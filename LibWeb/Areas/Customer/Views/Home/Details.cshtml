@model Course

<div class="card shadow border-0 mt-4 mb-4">
    <div class="card-header bg-secondary bg-gradient text-light py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white text-uppercase">@Model.Title</h3>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="py-3">
            <div class="row">
                <div class="col-6 col-md-2 offset-lg-1 pb-1">
                    <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                        <small>Back to Courses</small>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-lg-4 text-center mb-3">
                    @if (Model.CourseImages != null && Model.CourseImages.Any())
                    {
                        var firstImage = Model.CourseImages.FirstOrDefault();
                        if (firstImage != null)
                        {
                            <img src="@Url.Content(Model.CourseImages.FirstOrDefault()?.ImageUrl)" class="card-img-top rounded" alt="Course Image" />
                        }
                        else
                        {
                            <img src="http://placehold.co/500x600/png" class="card-img-top rounded" alt="Placeholder Image" />
                        }
                    }

                    else

                    {
                        <img src="http://placehold.co/500x600/png" class="card-img-top rounded" alt="Placeholder Image" />
                    }
                </div>
                <div class="col-12 col-lg-6">
                    <div class="mb-3">
                        <span class="badge bg-primary">@Model.Category.Name</span>
                    </div>
                    <div class="row">
                        <p class="text-secondary lh-sm">@Html.Raw(Model.Description)</p>
                    </div>
                    <div class="row mt-4">
                        <div class="col-12 col-md-6 pb-1">
                            <a asp-action="Enroll" asp-route-courseId="@Model.CourseId"
                               class="btn btn-primary bg-gradient w-100 py-2 text-uppercase fw-semibold">
                                Enroll Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Chapters Section -->
            <div class="row mt-5">
                <div class="col-12">
                    <h4 class="text-uppercase">Course Chapters</h4>
                    <ul class="list-group">
                        @if (Model.Chapters != null && Model.Chapters.Any())

                        {
                            @foreach (var chapter in Model.Chapters)

                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <strong>@chapter.ChapterId. @chapter.Title</strong>
                                    </span>
                                    <a asp-action="TakeQuiz" asp-route-chapterId="@chapter.ChapterId"
                                       class="btn btn-primary btn-sm">
                                        Test
                                    </a>
                                </li>
                            }
                        }

                        else

                        {
                            <li class="list-group-item">No chapters available for this course.</li>
                        }
                    </ul>
                </div>
            </div>
            <!-- End Chapters Section -->
        </div>
    </div>
</div>

@section style {
    <style>
        /* Stiluri pentru imagini */
        .card-img-top {
            width: 100%;
            height: 300px; /* Ajustează înălțimea dorită */
            object-fit: cover; /* Asigură că imaginile se potrivesc în container */
            border-radius: 8px; /* Rotunjeste colțurile imaginilor */
        }
    </style>
}