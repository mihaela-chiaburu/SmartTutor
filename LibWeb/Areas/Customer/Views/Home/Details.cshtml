@model Course

<div class="card shadow border-0 mt-4 mb-4">
    <div class="card-header bg-secondary bg-gradient text-light py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white text-uppercase">@Model.Title</h3>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="py-3">
            <div class="row">
                <div class="col-6 col-md-2 offset-lg-1 pb-1">
                    <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                        <small>Back to Courses</small>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-lg-4 text-center mb-3">
                    @if (Model.CourseImages != null && Model.CourseImages.Any())

                    {
                        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                @foreach (var imageWithIndex in Model.CourseImages.Select((image, index) => new { CourseImage = image, Index = index }))

                                {
                                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@imageWithIndex.Index"
                                            class="@(imageWithIndex.Index == 0 ? "active" : "")" aria-current="true" aria-label="Slide @imageWithIndex.Index"></button>
                                }
                            </div>
                            <div class="carousel-inner">
                                @foreach (var imageWithIndex in Model.CourseImages.Select((image, index) => new { CourseImage = image, Index = index }))

                                {
                                    <div class="@(imageWithIndex.Index == 0 ? "carousel-item active" : "carousel-item")">
                                        <img src="@imageWithIndex.CourseImage.ImageUrl" class="d-block w-100" alt="Course Image">
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    }

                    else

                    {
                        <img src="http://placehold.co/500x600/png" class="img-fluid rounded" />
                    }
                </div>
                <div class="col-12 col-lg-6">
                    <div class="mb-3">
                        <span class="badge bg-primary">@Model.Category.Name</span>
                    </div>
                    <div class="row">
                        <p class="text-secondary lh-sm">@Html.Raw(Model.Description)</p>
                    </div>
                    <div class="row mt-4">
                        <div class="col-12 col-md-6 pb-1">
                            <a asp-action="Enroll" asp-route-courseId="@Model.CourseId"
                               class="btn btn-primary bg-gradient w-100 py-2 text-uppercase fw-semibold">
                                Enroll Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
