@model List<Course>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Courses List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <div class="row pb-3">
            <div class="col-6">
                <!-- Additional filters or search options can go here -->
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Course" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Course
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Created By</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)

                {
                    <tr>
                        <td>@course.Title</td>
                        <td>@course.Category.Name</td>
                        <td>@course.CreatedBy.UserName</td>
                        <td>
                            <a asp-controller="Course" asp-action="Upsert" asp-route-id="@course.CourseId" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-controller="Course" asp-action="Delete" asp-route-id="@course.CourseId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this course?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@section Scripts {
    <script src="~/js/course.js"></script>
}
