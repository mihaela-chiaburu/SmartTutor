<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Quiz</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="quiz-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <span class="badge bg-primary fs-6">Correct Answers: 0/0</span>
            </div>

            <h3 class="question mb-4">What is the alter-ego of the DC comics character "Superman"?</h3>

            <div class="options mb-4">
                <div class="p-3 mb-2 bg-light rounded option" data-option="1">
                    Bruce Wayne
                </div>
                <div class="p-3 mb-2 bg-light rounded option" data-option="2">
                    Clark Kent
                </div>
                <div class="p-3 mb-2 bg-light rounded option" data-option="3">
                    John Jones
                </div>
                <div class="p-3 mb-2 bg-light rounded option" data-option="4">
                    Arthur Curry
                </div>
            </div>

            <div class="d-grid gap-2">
                <button class="btn btn-primary next-btn py-2">
                    NEXT QUESTION <i class="bi bi-arrow-right"></i>
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            let selectedOption = null;

            $('.option').click(function () {
                // Remove active class from all options
                $('.option').removeClass('active');
                // Add active class to clicked option
                $(this).addClass('active');
                selectedOption = $(this).data('option');
            });

            $('.next-btn').click(function () {
                if (!selectedOption) {
                    alert('Please select an answer before continuing');
                    return;
                }

                // Handle next question logic
                console.log('Selected option:', selectedOption);

                // Reset for next question
                $('.option').removeClass('active');
                selectedOption = null;
            });
        });
    </script>
}

<style>
    /* Custom styles to match your design */
    .quiz-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .question {
        font-size: 1.4rem;
        color: #333;
    }

    .option {
        cursor: pointer;
        transition: all 0.2s;
        border: 1px solid #dee2e6;
    }

        .option:hover {
            background-color: #e9ecef !important;
        }

        .option.active {
            background-color: #d1e7ff !important;
            border-color: #86b7fe;
            position: relative;
        }

            .option.active::after {
                content: "✓";
                position: absolute;
                right: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: #0d6efd;
                font-weight: bold;
            }

    .next-btn {
        font-weight: 500;
    }
</style>