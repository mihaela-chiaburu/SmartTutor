@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.PreferredCategoryId" class="form-label">Preferred Category</label>
                <select asp-for="Input.PreferredCategoryId" asp-items="Model.CategoryList" class="form-select">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Input.PreferredCategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <h5>Notification Settings</h5>
                <div class="form-check mb-2">
                    <input asp-for="Input.EmailNotifications" class="form-check-input" />
                    <label asp-for="Input.EmailNotifications" class="form-check-label">Email Notifications</label>
                </div>
                <div class="form-check mb-2">
                    <input asp-for="Input.CourseUpdates" class="form-check-input" />
                    <label asp-for="Input.CourseUpdates" class="form-check-label">Course Updates</label>
                </div>
                <div class="form-check mb-2">
                    <input asp-for="Input.QuizResults" class="form-check-input" />
                    <label asp-for="Input.QuizResults" class="form-check-label">Quiz Results</label>
                </div>
                <div class="form-check mb-2">
                    <input asp-for="Input.ProgressUpdates" class="form-check-input" />
                    <label asp-for="Input.ProgressUpdates" class="form-check-label">Progress Updates</label>
                </div>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
