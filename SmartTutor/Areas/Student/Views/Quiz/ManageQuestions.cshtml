@model SmartTutor.Models.ViewModels.QuestionManagementVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Manage Questions for @Model.ChapterTitle</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                <a asp-action="CreateQuestion" asp-route-chapterId="@Model.ChapterId"
                   class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Question
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Question</th>
                    <th>Difficulty</th>
                    <th>Answers</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var question in Model.Questions)
                {
                    <tr>
                        <td>@question.Text</td>
                        <td>@question.Difficulty</td>
                        <td>@question.Answers.Count</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="EditQuestion" asp-route-id="@question.Id"
                                   class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="DeleteQuestion" asp-route-id="@question.Id"
                                   class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>